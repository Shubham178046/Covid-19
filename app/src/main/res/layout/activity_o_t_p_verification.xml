<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.OTPVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="vertical"
            android:paddingLeft="24.7dp"
            android:paddingBottom="29.7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.3dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="@string/mobile_verification"
                android:textColor="@color/white"
                android:textSize="26.7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="@string/we_have_send_you_otp_on_your_mobile_number"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtOtpMobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="@string/_9717777541"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_edit"
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_marginTop="9.3dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/rectangle_light_gray"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="@string/edit"
                android:textAlignment="center"
                android:textColor="@color/txt_black"
                android:textSize="14.3sp" />

            <LinearLayout
                android:id="@+id/llOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="0"
                    android:backgroundTint="@color/white"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white"
                    android:textSize="53.3sp" />

                <EditText
                    android:id="@+id/et2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="0"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white"
                    android:textSize="53.3sp" />

                <EditText
                    android:id="@+id/et3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    android:hint="0"
                    android:padding="10dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white"
                    android:textSize="53.3sp" />

                <EditText
                    android:id="@+id/et4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="0"
                    android:padding="10dp"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white"
                    android:textSize="53.3sp" />
                <EditText
                    android:id="@+id/et5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="0"
                    android:padding="10dp"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white"
                    android:textSize="53.3sp" />
                <EditText
                    android:id="@+id/et6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="0"
                    android:padding="10dp"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@color/white"
                    android:textSize="53.3sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27.8dp">
                <TextView
                    android:id="@+id/txt_Auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="@string/auto_verifying_your_mobile_number"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14.3sp" />

                <LinearLayout
                    android:id="@+id/li_success"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="@string/mobile_number_verified"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14.3sp" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.7dp"
            android:layout_marginTop="36.3dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:includeFontPadding="false"
            android:text="@string/full_name"
            android:textColor="@color/title_black"
            android:textSize="16.7sp" />

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.7dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="28.7dp"
            android:background="@drawable/rectangle_gray_border"
            android:fontFamily="@font/sf_pro_display_regular"
            android:hint="@string/shaikh_sami"
            android:inputType="text"
            android:paddingLeft="16.7dp"
            android:paddingTop="12dp"
            android:paddingBottom="11.7dp"
            android:textColor="@color/title_black"
            android:textColorHint="@color/hint_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.7dp"
        android:layout_marginRight="28.7dp"
        android:layout_marginBottom="21.3dp"
        android:background="@drawable/rectangle_gray_border"
        android:fontFamily="@font/sf_pro_display_bold"
        android:paddingTop="11dp"
        android:enabled="false"
        android:paddingBottom="10.7dp"
        android:text="@string/next"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/hint_color"
        android:textSize="15sp" />
</LinearLayout>