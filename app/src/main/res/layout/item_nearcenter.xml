<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16.7dp"
    android:layout_marginRight="16.7dp"
    android:layout_marginBottom="16.7dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/centre_1"
                android:textColor="@color/title_black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.3dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/downtown_dubai"
                android:textColor="@color/hint_color"
                android:textSize="16.7sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_gray_selectborder"
            android:fontFamily="@font/sf_pro_display_bold"
            android:paddingLeft="31dp"
            android:paddingTop="11dp"
            android:paddingRight="31dp"
            android:paddingBottom="10.7dp"
            android:text="@string/select"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>